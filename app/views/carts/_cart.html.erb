<% if notice && notice != 'Successfully logged out' %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<article>
  <h2><%= t('.title') %></h2>
  <table>
    <%= render cart.line_items %>
    <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
  <div class="action_buttons">
    <%= button_to t('.empty'), @cart, method: :delete, data: {confirm: t('.confirm')} %>
    <% if request.path.include? 'orders' %>
      <%= button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get, disabled: true, class: 'checkout-disabled' %>
    <% else %>
      <%= button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get, class: 'checkout' %>
    <% end %>
  </div>
</article>
