<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<article>
  <h2>Your Cart</h2>
  <table>
    <%= render cart.line_items %>
    <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
  <div class="action_buttons">
    <%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: "Are you sure you'd like to empty your cart?"} %>
    <% if request.path.include? 'orders' %>
      <%= button_to 'Checkout', new_order_path, method: :get, disabled: true, class: 'checkout-disabled' %>
    <% else %>
      <%= button_to 'Checkout', new_order_path, method: :get, class: 'checkout' %>
    <% end %>
  </div>
</article>
