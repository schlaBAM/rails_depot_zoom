<!DOCTYPE html>
<html>
<head>
  <title> <%= controller.controller_name.capitalize %> | Online Store of Big Books</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script type="text/javascript">
      I18n.defaultLocale = "<%= I18n.default_locale %>";
      I18n.locale = "<%= I18n.locale %>";
  </script>
</head>

<body>
<header class="main">
  <%= link_to image_tag('logo.svg'), store_index_path(locale: I18n.locale), alt: 'The Pragmatic Bookshelf', class: 'logo' %>
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <nav class="side_nav">
    <div id="cart" class="carts">
      <%= render_if @cart && @cart.line_items.any?, @cart %>
    </div>
    <ul>
      <li><a href="/"><%= t('.home') %></a></li>
      <li><a href="/contact"><%= t('.contact') %></a></li>
      <% if session[:user_id].nil? %>
        <li><%= link_to t('.secrets'), login_path %></li>
      <% end %>

    </ul>
    <% if session[:user_id] %>
      <nav class="logged_in_nav">
        <ul>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Users', users_path %></li>
          <li><%= button_to 'Logout', logout_path, method: :delete %></li>
        </ul>
      </nav>
    <% end %>
  </nav>
  <main class=' <%= controller.controller_name %>'>
    <%= yield %>
  </main>
</section>
</body>
</html>
