<!DOCTYPE html>
<html>
<head>
  <title> <%= controller.controller_name.capitalize  %> | Online Store of Big Books</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header class="main">
  <%= link_to image_tag('logo.svg'), store_index_path, alt: 'The Pragmatic Bookshelf', class: 'logo' %>
  <h1><%= @page_title %></h1>
</header>
<section class="content">
  <nav class="side_nav">
    <div id="cart" class="carts">
      <%= render_if @cart && @cart.line_items.any?, @cart %>
    </div>
    <ul>
      <li><a href="/">Home</a></li>
      <li><%= link_to 'Products', products_url%></li>
      <li><%= link_to 'Orders', orders_url %></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  <main class=' <%= controller.controller_name %>'>
    <%= yield %>
  </main>
</section>
</body>
</html>
